<!-- res/drawable/button_background_states.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the button is pressed -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF0000"/> <!-- Red background when pressed -->
            <stroke android:width="2dp" android:color="#FF0000"/> <!-- Red border -->
            <corners android:radius="25dp"/> <!-- Same 25dp radius -->
        </shape>
    </item>

    <!-- Default state (not pressed) -->
    <item>
        <shape>
            <solid android:color="#FFFFFF"/> <!-- White background -->
            <stroke android:width="2dp" android:color="#FF0000"/> <!-- Red border -->
            <corners android:radius="25dp"/> <!-- 25dp radius -->
        </shape>
    </item>
</selector>
