<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8FFFF9F9"
    android:gravity="center"
    android:orientation="vertical">

    <!-- Top Navigation Bar -->
    <LinearLayout
        android:id="@+id/top_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@null"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Home Icon -->
        <ImageButton
            android:id="@+id/navigation_home_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="Home"
           />

        <!-- Search Icon -->
        <ImageButton
            android:id="@+id/navigation_search_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="Search" />

        <!-- Add Icon -->
        <ImageButton
            android:id="@+id/navigation_add_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="Add" />

        <!-- Grid Icon -->
        <ImageButton
            android:id="@+id/navigation_grid_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="Grid"
            android:src="@drawable/bookmark_40px" />
    </LinearLayout>

    <!-- Scrollable Fragment Container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <FrameLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF" />
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@null"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Home Icon -->
        <ImageButton
            android:id="@+id/navigation_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="Home"
            android:src="@drawable/home_40px" />

        <!-- Search Icon -->
        <ImageButton
            android:id="@+id/navigation_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="Search"
            android:src="@drawable/search_40px" />

        <!-- Add Icon -->
        <ImageButton
            android:id="@+id/navigation_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="Add"
            android:src="@drawable/more" />

        <!-- Grid Icon -->
        <ImageButton
            android:id="@+id/navigation_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="Grid"
            android:src="@drawable/date_range_24px" />
    </LinearLayout>
</LinearLayout>
